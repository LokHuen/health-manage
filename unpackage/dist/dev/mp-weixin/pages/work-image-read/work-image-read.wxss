page {
  background-color: #f8f8f8;
}
.loadMore {
  font-size: 30rpx;
  color: #555;
  margin-bottom: 20rpx;
  text-align: center;
}
.container {
  position: relative;
}
.container .list {
  padding-top: 40rpx;
}
.container .list .item {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background-color: #FFFFFF;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin: 0rpx 40rpx 40rpx 40rpx;
  padding: 30rpx 30rpx 40rpx 30rpx;
  -webkit-box-shadow: 0px 0px 9px 1px rgba(0, 0, 0, 0.18);
          box-shadow: 0px 0px 9px 1px rgba(0, 0, 0, 0.18);
}
.container .list .item text {
  font-size: 30rpx;
  color: #333333;
  margin-top: 10rpx;
}
.container .list .item .infor {
  color: #999999;
}
.container .list .item .time {
  position: absolute;
  right: 30rpx;
  font-size: 26rpx;
  color: #666666;
}
.container .flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.container .phonetab {
  width: 100%;
  position: -webkit-sticky;
  position: sticky;
  z-index: 999;
  background: #FFFFFF;
  top: 0;
  height: 100rpx;
}
.container .phonetab .itemlist {
  width: 33%;
  text-align: center;
}
.container .phonetab .itemlist text {
  font-size: 32rpx;
  color: #343434;
  border-bottom: 4rpx solid transparent;
  padding-bottom: 10rpx;
}
.container .phonetab .itemlist .on {
  color: #2894EC;
  border-color: #2894EC;
}
.container .empty-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.container .empty-box image {
  margin-top: 140rpx;
  width: 250rpx;
  height: 240rpx;
}
.container .empty-box text {
  color: #999999;
  font-size: 34rpx;
}

