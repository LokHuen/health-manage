.choosebox {
  background: #fff;
  height: 758rpx;
}
.choosebox .headtitle {
  line-height: 140rpx;
  font-size: 34rpx;
  text-align: center;
  position: relative;
}
.choosebox .headtitle .backicon {
  padding-left: 28rpx;
  position: absolute;
  left: 0;
}
.choosebox .choosebody {
  height: 610rpx;
  overflow-y: auto;
}
.choosebox .choosebody .itemlist {
  line-height: 96rpx;
  border-bottom: 1rpx solid #eee;
  margin: 0 30rpx;
  padding: 0 6rpx;
}
.choosebox .choosebody .itemlist ._p {
  -webkit-box-flex: 1;
