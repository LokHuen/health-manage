          flex: 1;
}
.contentbox {
  padding: 0 30rpx;
}
.contentbox .uploadbox {
  padding: 40rpx 0;
  border-bottom: 1px solid #eee;
}
.contentbox .uploadbox image {
  width: 268rpx;
  margin-right: 36rpx;
}
.contentbox .uploadbox .textbox view:nth-child(1) {
  font-size: 34rpx;
  padding-bottom: 12rpx;
}
.contentbox .uploadbox .textbox text:nth-child(2) {
  font-size: 28rpx;
  color: #707578;
}
.contentbox .introbox {
  padding-bottom: 25rpx;
}
.contentbox .introbox .bigtitle {
  padding: 50rpx 0 20rpx;
  font-size: 44rpx;
}
.contentbox .introbox .textinfo {
  font-size: 28rpx;
}
.contentbox .linebox {
  border-bottom: 1px solid #eee;
  min-height: 100rpx;
  padding: 0 0 0 6rpx;
}
.contentbox .linebox .lefttext {
  width: 100rpx;
  padding-right: 32rpx;
}
.contentbox .linebox .rightarea {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #888;
}
.contentbox .pagebottombt {
  padding: 100rpx 0;
}
.contentbox .pagebottombt view {
  background: #FF460A;
  color: #fff;
  text-align: center;
  font-size: 38rpx;
  line-height: 88rpx;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
